class Menu:
    def __init__(self, choice):
        self.menu_items = {
            1: {"name": "Pinakbet na Pinasarap", "bill": 900},
            2: {"name": "Scallop", "bill": 490},
            3: {"name": "Lechon Kawali", "bill": 590}
        }
        self.choice = choice
        self.order_name = ""
        self.order_bill = 0

    def get_order(self):
        ListFood = {
            1: "Chicken na Pinakurat",
            2: "Inihaw na Manok",
            3: "Pinakbet"
        }
        self.order_name = ListFood.get(self.choice, "Invalid Choice!")

    def get_bill(self):
        self.order_bill = self.menu_items[self.choice]["bill"]

    def display(self):
        print(f"Order for table number {self.choice} is {self.order_name}.\n")
        print(f"Bill is Php{self.order_bill}.00")
        print("Thank you for Dining!\nCome Again!")


class TestMenu:
    def __init__(self):
        print("-------------Menu-------------")
        print("1. Chicken na Pinakurat = Php900")
        print("2. Inihaw na Manok      = Php490")
        print("3. Pinakbet             = Php590\n")

        choice = int(input(""))
        menu = Menu(choice)
        menu.get_order()
        menu.get_bill()
        menu.display()


TestMenu()
